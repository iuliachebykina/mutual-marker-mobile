<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_reg"
    app:startDestination="@id/LoginForm">
    <fragment
        android:id="@+id/LoginForm"
        android:name="ru.urfu.mutualmarker.fragments.LoginForm"
        android:label="@string/login_form_fragment"
        tools:layout="@layout/login_form">

        <action
            android:id="@+id/action_Login_to_AddRoomFragment"
            app:destination="@id/AddRoom" />
    </fragment>
    <fragment
        android:id="@+id/AddRoom"
        android:name="ru.urfu.mutualmarker.fragments.AddRoomFragment"
        android:label="@string/addRoomLabel"
        tools:layout="@layout/fragment_add_room">
    </fragment>
</navigation>